<UserControl x:Class="PictureLibraryWPF.CustomControls.Files.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictureLibraryWPF.CustomControls.Files"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200" DataContext="{Binding IFileSystemViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TreeView x:Name="FilesTreeView" Margin="5" ItemsSource="{Binding Drives}"/>
    </Grid>
</UserControl>
